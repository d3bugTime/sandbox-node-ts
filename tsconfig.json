{
    "compilerOptions": {
        /* Basic Options */
        "target": "es6",
        "module": "commonjs",
        "rootDir": "src",
        "outDir": "dist",
        
        /* Strict Type-Checking Options */
        "strict": true,
        "noImplicitAny": true,
        
        /* Module Resolution Options */
        "esModuleInterop": true,
        "moduleResolution": "node"
    }
}